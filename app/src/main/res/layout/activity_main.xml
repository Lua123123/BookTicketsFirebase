<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_7sdp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_8sdp"
                    android:text="CATEGORIES"
                    android:textAllCaps="true"
                    android:textColor="@color/nearBlack"
                    android:textSize="@dimen/_26ssp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imgInformation"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_marginEnd="10dp"
                    android:elevation="@dimen/_10sdp"
                    android:src="@drawable/ic_person"
                    android:translationZ="@dimen/_10sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_140sdp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_115sdp"
                    android:layout_margin="@dimen/_15sdp"
                    app:cardCornerRadius="@dimen/_15sdp"
                    app:cardElevation="@dimen/_8sdp">

                    <RelativeLayout
                        android:id="@+id/booktakeaway"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/gold"
                        android:elevation="@dimen/_7sdp"
                        android:translationZ="@dimen/_7sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_14sdp"
                            android:text="BOOK TICKETS"
                            android:textColor="@color/nearBlack"
                            android:textColorHint="@color/black"
                            android:textSize="@dimen/_23ssp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:padding="@dimen/_14sdp"
                            android:text="EXPAND ALL"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

<!--                <ImageView-->
<!--                    android:layout_width="@dimen/_100sdp"-->
<!--                    android:layout_height="@dimen/_120sdp"-->
<!--                    android:layout_alignParentRight="true"-->
<!--                    android:layout_marginTop="-4dp"-->
<!--                    android:elevation="@dimen/_7sdp"-->
<!--                    android:src="@drawable/book"-->
<!--                    android:translationZ="@dimen/_7sdp" />-->
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_115sdp"
                android:layout_margin="@dimen/_15sdp"
                app:cardCornerRadius="@dimen/_15sdp"
                app:cardElevation="@dimen/_8sdp">

                <RelativeLayout
                    android:id="@+id/adddishes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#20B2AA"
                    android:elevation="@dimen/_7sdp"
                    android:translationZ="@dimen/_7sdp">

<!--                    <ImageView-->
<!--                        android:layout_width="@dimen/_90sdp"-->
<!--                        android:layout_height="@dimen/_115sdp"-->
<!--                        android:layout_marginLeft="@dimen/_10sdp"-->
<!--                        android:elevation="@dimen/_10sdp"-->
<!--                        android:src="@drawable/vocabulary"-->
<!--                        android:translationZ="@dimen/_10sdp" />-->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="@dimen/_14sdp"
                        android:text="TICKETS INFORMATION"
                        android:textColor="@color/white"
                        android:textColorHint="@color/black"
                        android:textSize="@dimen/_18ssp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:padding="@dimen/_20sdp"
                        android:text="EXPAND ALL"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:id="@+id/invoicehistory"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_140sdp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_15sdp"
                    app:cardCornerRadius="@dimen/_15sdp"
                    app:cardElevation="@dimen/_8sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/black">
<!--                        android:alpha="0.8"-->
<!--                        #20B2AA-->
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_14sdp"
                            android:text="INVOICE HISTORY"
                            android:textColor="@color/gold"
                            android:textSize="@dimen/_22ssp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:padding="@dimen/_14sdp"
                            android:text="EXPAND ALL"
                            android:textColor="@color/gold"
                            android:textStyle="bold" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

<!--                <ImageView-->
<!--                    android:layout_width="@dimen/_100sdp"-->
<!--                    android:layout_height="@dimen/_140sdp"-->
<!--                    android:layout_alignParentRight="true"-->
<!--                    android:layout_marginTop="-18dp"-->
<!--                    android:elevation="@dimen/_10sdp"-->
<!--                    android:src="@drawable/speaker" />-->
            </RelativeLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>